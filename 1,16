<body>
        <input type="text" id="PN" placeholder="Ingrese un nombre">
        <button class="btn btn-success mt-3" onclick="AN(this)">Agregar</button>

        <ul id="LDN">
        </ul>

    <script>
        function AN(button) {
            let input = document.getElementById("PN");
            let list = document.getElementById("LDN");
            let NN = document.createElement("li");
            NN.textContent = input.value;
            list.appendChild(NN);
            input.value = "";
            
        }
    </script>
